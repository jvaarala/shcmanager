#!/usr/bin/env bash

# If running under zsh, re-execute with bash
if [ -n "$ZSH_VERSION" ]; then
  exec bash "$0" "$@"
fi

# Usage
if [ $# -ne 0 ] && [ "$1" != "create" ]; then
  echo "Usage: $0 [create <plugin_name>]"
  exit 1
elif [ "$1" = "create" ] && [ $# -ne 2 ]; then
  echo "Usage: $0 [create <plugin_name>]"
  exit 1
fi

# Get the directory where the script is located
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)"

# Load configuration
config_file="$script_dir/.shcmanager.config"
work_dir=""
plugin_dir=""

yellow_warning="\033[1;33m⚠\033[0m"
red_x="\033[1;31mⅹ\033[0m"
green_ok="\033[1;32m✓\033[0m"

red_text() {
  local text="$1"
  local s="\033[0;31m${text}\033[0m"
  echo "$s"
}

green_text() {
  local text="$1"
  local s="\033[0;32m${text}\033[0m"
  echo "$s"
}

if [ ! -f "$config_file" ]; then
  echo -e "$yellow_warning Config file not found at $config_file"
  printf "Do you want to create the config file? (y/n): "
  read create_config
  if [ "$create_config" = "y" ]; then
    printf "Enter the location for WORK_DIR: "
    read wd
    echo "WORK_DIR=$wd" >"$config_file"
    echo -e "$green_ok Config file created at $config_file"
    work_dir=$(eval echo "$wd")
  else
    echo -e "$red_x Config file creation aborted. You need to create the config file ($config_file) and set WORK_DIR to proceed."
    exit 1
  fi
else
  while IFS='=' read -r key value; do
    if [ "$key" = "WORK_DIR" ]; then
      work_dir=$(eval echo "$value")
      break
    fi
  done <"$config_file"
fi

if [ -n "$work_dir" ]; then
  plugin_dir="$work_dir/plugins"
else
  echo -e "$yellow_warning WORK_DIR not found in config file!"
  exit 1
fi

if [ "$1" = "create" ]; then
  input_string="$2"
  filename=$(echo "$input_string" | tr ' ' '_')
  file_path="$plugin_dir/$filename"

  if [ ! -d "$plugin_dir" ]; then
    mkdir -p "$plugin_dir"
  fi

  cat <<'EOL' >"$file_path"
source "$SHCMANAGER_ADAPTERS_DIR/brew_package"
source "$SHCMANAGER_ADAPTERS_DIR/repository"
source "$SHCMANAGER_ADAPTERS_DIR/symlink"

install_FILENAME() {
  echo ""
  echo "Installing FILENAME..."
}

uninstall_FILENAME() {
  echo ""
  echo "Uninstalling FILENAME..."
}
EOL

  # Replace FILENAME placeholder with actual filename
  sed -i.bak "s/FILENAME/$filename/g" "$file_path"
  rm -f "$file_path.bak"

  echo -e "$green_ok Plugin template created at $file_path"
  exit 1
fi

# Export the adapters directory for plugins to use
export SHCMANAGER_ADAPTERS_DIR="$script_dir/adapters"

# Load "plugins"
menu_options=()
for file in "$plugin_dir"/*; do
  if [ -f "$file" ]; then
    # shellcheck source=/dev/null
    source "$file"
    filename=$(basename "$file")
    menu_options=("${menu_options[@]}" "${filename%.*}")
  fi
done

# Menu
selectedForInstall=()
selectedForUninstall=()

cursorIndex=0

display_menu() {
  clear
  echo ""
  for index in "${!menu_options[@]}"; do
    selectedForInstall_contains=false
    selectedForUninstall_contains=false
    for s in "${selectedForInstall[@]}"; do
      if [[ "$s" =~ ^[0-9]+$ ]] && [ "$s" -eq "$index" ]; then
        selectedForInstall_contains=true
        break
      fi
    done
    for s in "${selectedForUninstall[@]}"; do
      if [[ "$s" =~ ^[0-9]+$ ]] && [ "$s" -eq "$index" ]; then
        selectedForUninstall_contains=true
        break
      fi
    done

    spacer="     "
    spacer_with_cursor="  ~> "

    if [ "$index" -eq "$cursorIndex" ]; then
      if $selectedForInstall_contains; then
        final_string="$spacer_with_cursor$(green_text "${menu_options[index]}") $green_ok"
      elif $selectedForUninstall_contains; then
        final_string="$spacer_with_cursor$(red_text "${menu_options[index]}") $red_x"
      else
        final_string="$spacer_with_cursor${menu_options[index]}"
      fi
    else
      if $selectedForInstall_contains; then
        final_string="$spacer$(green_text "${menu_options[index]}") $green_ok"
      elif $selectedForUninstall_contains; then
        final_string="$spacer$(red_text "${menu_options[index]}") $red_x"
      else
        final_string="$spacer${menu_options[index]}"
      fi
    fi

    echo -e "${final_string//_/ }"
  done

  echo ""
  echo "   [k] up  [l] down  [i] select [u] uninstall  [q] quit  [enter] confirm"
}

while true; do
  display_menu

  read -rsn1 key
  case "$key" in
  q)
    clear
    exit 0
    ;;

  # k - move cursor up
  k)
    ((cursorIndex--))
    if ((cursorIndex < 0)); then
      cursorIndex=$((${#menu_options[@]} - 1))
    fi
    ;;

  # l - move cursor down
  l)
    ((cursorIndex++))
    if ((cursorIndex >= ${#menu_options[@]})); then
      cursorIndex=0
    fi
    ;;

  # i - select option
  i)
    selectedForInstall_contains=false
    for s in "${selectedForInstall[@]}"; do
      if [[ "$s" -eq "$cursorIndex" ]]; then
        selectedForInstall_contains=true
        break
      fi
    done

    if $selectedForInstall_contains; then
      # Remove from the selectedForInstall array
      selectedForInstall=("${selectedForInstall[@]/$cursorIndex/}")
    else
      # Add to the selectedForInstall array
      selectedForInstall[${#selectedForInstall[@]}]="$cursorIndex"
      # Remove from the selectedForUninstall array if present
      selectedForUninstall=("${selectedForUninstall[@]/$cursorIndex/}")
    fi

    # Filter out empty elements
    filtered_selectedForInstall=()
    for s in "${selectedForInstall[@]}"; do
      if [[ -n "$s" ]]; then
        filtered_selectedForInstall[${#filtered_selectedForInstall[@]}]="$s"
      fi
    done
    selectedForInstall=("${filtered_selectedForInstall[@]}")
    ;;

  # u - select option
  u)
    selectedForUninstall_contains=false
    for s in "${selectedForUninstall[@]}"; do
      if [[ "$s" -eq "$cursorIndex" ]]; then
        selectedForUninstall_contains=true
        break
      fi
    done

    if $selectedForUninstall_contains; then
      # Remove from the selectedForUninstall array
      selectedForUninstall=("${selectedForUninstall[@]/$cursorIndex/}")
    else
      # Add to the selectedForUninstall array
      selectedForUninstall[${#selectedForUninstall[@]}]="$cursorIndex"
      # Remove from the selectedForInstall array if present
      selectedForInstall=("${selectedForInstall[@]/$cursorIndex/}")
    fi

    # Filter out empty elements
    filtered_selectedForUninstall=()
    for s in "${selectedForUninstall[@]}"; do
      if [[ -n "$s" ]]; then
        filtered_selectedForUninstall[${#filtered_selectedForUninstall[@]}]="$s"
      fi
    done
    selectedForUninstall=("${filtered_selectedForUninstall[@]}")
    ;;

    # Enter to confirm selection
  "")
    break
    ;;
  *) ;;

  esac
done

# Sort the arrays in same order as the menu_options array
sorted_selectedForInstall=()
for i in "${!menu_options[@]}"; do
  for j in "${selectedForInstall[@]}"; do
    if [[ "$i" -eq "$j" ]]; then
      sorted_selectedForInstall[${#sorted_selectedForInstall[@]}]="$i"
    fi
  done
done

sorted_selectedForUninstall=()
for i in "${!menu_options[@]}"; do
  for j in "${selectedForUninstall[@]}"; do
    if [[ "$i" -eq "$j" ]]; then
      sorted_selectedForUninstall[${#sorted_selectedForUninstall[@]}]="$i"
    fi
  done
done
clear

# Install and uninstall
for i in "${sorted_selectedForInstall[@]}"; do
  function_name="install_${menu_options[i]}"
  if declare -f "$function_name" >/dev/null; then
    eval "$function_name"
  else
    echo "Function $function_name not found"
  fi
done

for i in "${sorted_selectedForUninstall[@]}"; do
  function_name="uninstall_${menu_options[i]}"
  if declare -f "$function_name" >/dev/null; then
    eval "$function_name"
  else
    echo "Function $function_name not found"
  fi
done

echo ""
echo -e "$green_ok It's all shcmanaged!"
echo ""
